{
    "name": "brianhenryie/bh-phpunit-failed-tests-action",
    "description": "Finds failed tests from recent CI runs and re-runs them first, giving faster feedback on whether previous failures are fixed.",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "BrianHenryIE"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "7.4"
        }
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.2",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "BrianHenryIE\\PHPUnitFailedTestsAction\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrianHenryIE\\PHPUnitFailedTestsAction\\": "tests/"
        }
    }
}
